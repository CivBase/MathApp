<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
    android:layout_height="match_parent" android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin" tools:context=".MainActivity">


    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/additionButton"
        android:layout_alignParentTop="true"
        android:layout_marginTop="88dp"
        android:textColor="#FFFFFF"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true"
        android:background="#224AC9"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:text="@string/activityMainAdditionButton" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/subtractionButton"
        android:background="#224AC9"
        android:textColor="#FFFFFF"
        android:layout_marginTop="61dp"
        android:layout_below="@+id/additionButton"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_alignRight="@+id/additionButton"
        android:layout_alignEnd="@+id/additionButton"
        android:text="@string/activityMainSubtractionButton" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/multiplicationButton"
        android:layout_below="@+id/subtractionButton"
        android:background="#224AC9"
        android:layout_alignParentRight="true"
        android:textColor="#FFFFFF"
        android:layout_alignParentEnd="true"
        android:layout_marginTop="61dp"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:text="@string/activityMainMultiplicationButton" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/divisionButton"
        android:layout_below="@+id/multiplicationButton"
        android:layout_marginTop="61dp"
        android:textColor="#FFFFFF"
        android:layout_alignParentLeft="true"
        android:background="#224AC9"
        android:layout_alignParentStart="true"
        android:layout_alignRight="@+id/multiplicationButton"
        android:layout_alignEnd="@+id/multiplicationButton"
        android:layout_alignParentEnd="true"
        android:text="@string/activityMainDivisionButton" />

</RelativeLayout>
