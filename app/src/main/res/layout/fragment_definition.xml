<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="fill_parent"
    android:layout_height="match_parent"
    tools:context="com.toomanycooksapp.mathapp.lessons.DefinitionFragment"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingBottom="@dimen/activity_vertical_margin">

    <LinearLayout
        android:orientation="vertical"
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        android:layout_alignParentStart="false"
        android:showDividers="middle|beginning">

        <LinearLayout
            android:orientation="vertical"
            android:layout_width="fill_parent"
            android:layout_height="100sp">

            <LinearLayout
                android:orientation="horizontal"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content">

                <TextView
                    android:text="@string/fragmentDefinitionToText"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:id="@+id/define_to"
                    android:textColor="#DA3A3A"
                    android:textSize="35sp"
                    android:textStyle="bold"
                    android:paddingLeft="5dp"
                    android:paddingRight="5dp" />

                <TextView
                    android:text="@string/fragmentDefinitionAddText"
                    android:id="@+id/define_subject"
                    android:layout_width="wrap_content"
                    android:textColor="#913AC9"
                    android:textSize="35sp"
                    android:textStyle="bold"
                    android:layout_height="wrap_content"
                    android:paddingLeft="5dp"
                    android:paddingRight="5dp" />
            </LinearLayout>

            <TextView
                android:text="@string/fragmentDefinitionMeansToText"
                android:id="@+id/define_means"
                android:layout_width="wrap_content"
                android:textColor="#DA3A3A"
                android:textSize="35sp"
                android:textStyle="bold"
                android:layout_height="wrap_content"
                android:paddingLeft="5dp"
                android:paddingRight="5dp" />
        </LinearLayout>

        <Button
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:id="@+id/define_repeat"
            android:layout_marginTop="5dp"
            android:textColor="#FFFFFF"
            android:background="#224AC9"
            android:text="@string/fragmentDefinitionRepeatButton"
            android:layout_weight="1"
            android:singleLine="false"
            android:layout_marginBottom="5dp"
            android:textSize="40sp"
            android:textAllCaps="true" />

        <Button
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:id="@+id/define_seperate"
            android:layout_marginTop="5dp"
            android:textColor="#FFFFFF"
            android:background="#224AC9"
            android:text="@string/fragmentDefinitionSeparateButton"
            android:layout_weight="1"
            android:singleLine="false"
            android:layout_marginBottom="5dp"
            android:textSize="40sp"
            android:textAllCaps="true" />

        <Button
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:id="@+id/define_take"
            android:layout_marginTop="5dp"
            android:textColor="#FFFFFF"
            android:background="#224AC9"
            android:text="@string/fragmentDefinitionTakeAwayButton"
            android:layout_weight="1"
            android:singleLine="false"
            android:layout_marginBottom="5dp"
            android:textSize="40sp"
            android:textAllCaps="true" />

        <Button
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:id="@+id/define_increase"
            android:layout_marginTop="5dp"
            android:textColor="#FFFFFF"
            android:background="#224AC9"
            android:text="@string/fragmentDefinitionIncreaseButton"
            android:layout_weight="1"
            android:singleLine="false"
            android:layout_marginBottom="5dp"
            android:textSize="40sp"
            android:textAllCaps="true" />
    </LinearLayout>
</RelativeLayout>
